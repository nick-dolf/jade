  div.modal(id="imageModal" tabindex="-1" role="dialog")
    div.modal-dialog.modal-xl
      div.modal-content
        div.modal-header
          h3.modal-title Select Image
          button.close(type="button" data-bs-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &times;
        div.modal-body
          if images
            for alt, image in images
              button.btn.m-1(type="button" onclick=`changeImage("${image}")`)
                img.img-thumbnail(
                  height= 100 width=100
                  src= site.baseURL + `/admin/assets/images${path}/modify/thumb/${image}` 
                )
        div.modal-footer
          button.btn.btn-primary(type="button" data-bs-dismiss="modal") Save 