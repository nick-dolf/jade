    div.accordion-item
      h2.accordion-header(id="headingTen")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
          data-bs-target="#collapseTen"
          ) Text #3
      div.accordion-collapse.collapse(id="collapseTen")
        +text('textThree', textThree)

    div.accordion-item
      h2.accordion-header(id="headingEleven")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
          data-bs-target="#collapseEleven"
          ) Grid #3
      div.accordion-collapse.collapse(id="collapseEleven")
