extends layouts/default
include sections/text
include sections/carousel
include sections/grid


block main
  li.list-group-item.d-flex.justify-content-end
    a.h5(href=site.baseURL+'/admin/images'+path) Manage Images

  form.accordion-(id="pageForm")
    div.accordion-item
      h2.accordion-header(id="headingOne")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
          data-bs-target="#collapseOne"
          ) Page Details
      div.accordion-collapse.collapse(id="collapseOne")
        include parts/page-info

    div.accordion-item
      h2.accordion-header(id="headingTwo")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
          data-bs-target="#collapseTwo"
          ) Page Style
      div.accordion-collapse.collapse(id="collapseTwo")
        include parts/page-style

    div.accordion-item
      h2.accordion-header(id="headingThree")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
          data-bs-target="#collapseThree"
          ) Carousel #1
      div.accordion-collapse.collapse(id="collapseThree")
        +carousel('carouselOne', carouselOne)

    div.accordion-item
      h2.accordion-header(id="headingFour")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
          data-bs-target="#collapseFour"
          ) Text #1
      div.accordion-collapse.collapse(id="collapseFour")
        +text('textOne', textOne)

    div.accordion-item
      h2.accordion-header(id="headingFive")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
          data-bs-target="#collapseFive"
          ) Grid #1
      div.accordion-collapse.collapse(id="collapseFive")
        +grid('gridOne', gridOne)

    div.accordion-item
      h2.accordion-header(id="headingSix")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
          data-bs-target="#collapseSix"
          ) Carousel #2
      div.accordion-collapse.collapse(id="collapseSix")
        +carousel('carouselTwo', carouselTwo)

    div.accordion-item
      h2.accordion-header(id="headingSeven")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
          data-bs-target="#collapseSeven"
          ) Text #2
      div.accordion-collapse.collapse(id="collapseSeven")
        +text('textTwo', textTwo)

    div.accordion-item
      h2.accordion-header(id="headingEight")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
