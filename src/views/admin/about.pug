extends layouts/default

block main
  form.accordion(id="pageForm")
    div.accordion-item
      h2.accordion-header(id="headingOne")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
          data-bs-target="#collapseOne"
          ) Page Details
      div.accordion-collapse.collapse(id="collapseOne")
        include parts/page-info

    div.accordion-item
      h2.accordion-header(id="headingTwo")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
          data-bs-target="#collapseTwo"
          ) Page Styling

      div.accordion-collapse.collapse(id="collapseTwo")
        div.accordion-body
          include parts/page-style

    div.accordion-item
      h2.accordion-header(id="headingThree")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
          data-bs-target="#collapseThree"
          ) Paragraphs
      div.accordion-collapse.collapse(id="collapseThree")
        div.accordion-body
          include sections/paragraphs

    div.accordion-item
      h2.accordion-header(id="headingFour")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
          data-bs-target="#collapseFour"
          ) Column One
      div.accordion-collapse.collapse(id="collapseFour")
        div.accordion-body
          include sections/column-one
    
    div.accordion-item
      h2.accordion-header(id="headingFive")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
